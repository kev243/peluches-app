generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Purchase {
  id        String   @id @default(uuid())
  email     String
  firstName String?
  count     Int      @default(1)
  lastOrder String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GiftToken {
  id        String   @id @default(uuid())
  email     String
  firstName String?
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}